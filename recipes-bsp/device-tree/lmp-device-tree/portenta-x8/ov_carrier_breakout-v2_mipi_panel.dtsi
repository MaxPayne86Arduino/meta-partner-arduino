/ {
	reg_dldo2: reg_dldo2 {
		compatible = "regulator-fixed";
		regulator-name = "mipi_panel_reg";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
	};
};

&lcdif {
	status = "disabled";
};

&iomuxc {
	imx8mm {
		pinctrl_rst_display: rstdisplay {
			fsl,pins = <MX8MM_IOMUXC_SAI5_RXC_GPIO3_IO20		0x16 /* ENABLE (active high) */>;
		};
	};
};

&mipi_dsi {
	status = "okay";

	panel@0 {
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_rst_display>;
		compatible = "techstar,ts8550b","sitronix,st7701";
		reg = <0>;
		VCC-supply = <&reg_dldo2>;
		IOVCC-supply = <&reg_dldo2>;
		reset-gpios = <&gpio3 20 GPIO_ACTIVE_HIGH>;
		//reset-gpios = <&x8h7_gpio 0 GPIO_ACTIVE_HIGH>;
		dsi-lanes = <2>;
		video-mode = <2>;	/* 0: burst mode
							 * 1: non-burst mode with sync event
							 * 2: non-burst mode with sync pulse
							 */
		panel-width-mm = <68>;
		panel-height-mm = <121>;
		status = "okay";
	};
};

&gpu {
	status = "okay";
};

&vpu_g1 {
	status = "okay";
};

&vpu_g2 {
	status = "okay";
};

&vpu_h1 {
	status = "okay";
};

&vpu_v4l2 {
	status = "okay";
};
