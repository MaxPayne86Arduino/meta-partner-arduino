/**
 * Portenta-X8 dtb overlay file
 * Arduino 2022
 * This overlay is adding the RPi V2.1 camera
 * with cmos sensor Sony imx219 to Rasp-Tenta carrier board
 */

/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/interrupt-controller/arm-gic.h>
#include <dt-bindings/clock/imx8mm-clock.h>
#include "imx8mm-pinfunc.h"

/ {
	compatible = "fsl,imx8mm-evk", "fsl,imx8mm";

	fragment@0 {
		target-path = "/";
		__overlay__ {
			imx219_vana_2v8: 2p8v {
				compatible = "regulator-fixed";
				regulator-name = "camera_vana";
				regulator-min-microvolt = <2800000>;
				regulator-max-microvolt = <2800000>;
			};

			imx219_vdig_1v8: 1p8v {
				compatible = "regulator-fixed";
				regulator-name = "camera_vdig";
				regulator-min-microvolt = <1500000>;
				regulator-max-microvolt = <1500000>;
			};

			imx219_vddl_1v2: 1p2v {
				compatible = "regulator-fixed";
				regulator-name = "camera_vddl";
				regulator-min-microvolt = <1200000>;
				regulator-max-microvolt = <1200000>;
			};

			imx219_clk: imx219clk {
				compatible = "fixed-clock";
				#clock-cells = <0>;
				clock-frequency = <24000000>;
			};
		};
	};

	fragment@1 {
		target = <&i2c2>;
		__overlay__ {
			imx219@10 {
				compatible = "sony,imx219";
				reg = <0x10>;
				status = "okay";
				VANA-supply = <&imx219_vana_2v8>;
				VDIG-supply = <&imx219_vdig_1v8>;
				VDDL-supply = <&imx219_vddl_1v2>;
				clocks = <&clk IMX8MM_CLK_CLKO1>;
				clock-names = "csi_mclk";
				assigned-clocks = <&clk IMX8MM_CLK_CLKO1>;
				assigned-clock-parents = <&clk IMX8MM_CLK_24M>;
				assigned-clock-rates = <24000000>;
				csi_id = <0>;
				reset-gpios = <&x8h7_gpio 5 GPIO_ACTIVE_HIGH>; /* stm32h7 PE10 */
				mclk = <24000000>;
				mclk_source = <0>;
				port {
					imx219_ep: endpoint {
						remote-endpoint = <&mipi1_sensor_ep>;
						data-lanes = <2>;
						link-frequencies = /bits/ 64 <456000000>;
					};
				};
			};
		};
	};

	fragment@2 {
		target = <&csi1_bridge>;
		__overlay__ {
			port {
				csi1_ep: endpoint {
					remote-endpoint = <&csi1_mipi_ep>;
				};
			};
		};
	};

	fragment@3 {
		target = <&mipi_csi_1>;
		__overlay__ {
			port {
				csi1_mipi_ep: endpoint@2 {
					remote-endpoint = <&csi1_ep>;
				};

				mipi1_sensor_ep: endpoint@1 {
					remote-endpoint = <&imx219_ep>;
					data-lanes = <2>;
				};
			};
		};
	};
};
